// var can ce reasined multiple times unlike to letVariable

var    varVariable = 'this is false'
var    varVariable1 = 'this is true'

console.log (varVariable)
console.log (varVariable1)




// let variable will only accepp the things that is inside the blocks   ("{}")

for(let i = 0; i< 3; i++) {
    console.log(i);
}

console.log(i)     //this right here is outside the blocks means this will cause an arror after the result program inside the blocks





// one of the most impoetant to const is you cannot reasign a value once you already assign it

const a = 33 

a = 30; // this part will error
 
console.log (a); // output; 33





// 2. In JavaScript, falsy values are like false in javascript. there is a condition that if you use 1 of the six false values.
      // And these are the six values (0, "",  null, undefined, NaN (Not a Number), false.) And thore are the false values.
      

//example 1
if (0) {
    console.log("This won't run because an empty string is falsy.");
}

// Example 1: Empty string is falsy
if ("") {
    console.log("This won't run because an empty string is falsy.");
}

// Example 2: null is falsy
if (null) {
    console.log("This won't run because null is falsy.");
}


