// Declare a variable to store the favorite number
var theFavNumber = 7; // You can change this to any number you like

// Declare a variable to store the user's guess
var userGuess = null;

// Use a while loop to keep asking the user until they guess correctly
while (userGuess !== theFavNumber) {  
    // Ask the user to enter a number using prompt and convert it to a number
    userGuess = Number(prompt("Guess my favorite number:"));

    // Check if the guess is too high, too low, or correct
    if (userGuess > theFavNumber) {  
        console.log("Too high! Try again.");
    } else if (userGuess < theFavNumber) {  
        console.log("Too low! Try again.");
    } else {  
        console.log("Correct! You guessed my favorite number.");
    }
}
